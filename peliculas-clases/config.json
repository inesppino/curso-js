{
  "icons": {
    "src": "_src/assets/icons/*.*",
    "dest": "public/",
    "dist": "docs/"
  },
  "html": {
    "src": "_src/templates/*.html",
    "partials": "_src/templates/partials/",
    "dest": "public/",
    "dist": "docs/"
  },
	"scss": {
		"src": "_src/assets/scss/**/*.scss",
		"dest": "public/assets/css/",
    "dist": "docs/assets/css/"
	},
	"js": {
		"src": [
      "_src/assets/js/controller/appPeliculas.js",
      "_src/assets/js/model/modeloPeliculas.js",
      "_src/assets/js/model/Pelicula.js"
		],
		"dest": "public/assets/js/",
    "dist": "docs/assets/js/"
  },
  "json":{
    "src": "src/assets/json/dataFilm.json",
		"dest": "public/assets/json/",
    "dist": "docs/assets/json/"
  },
	"images": {
    "src": "_src/assets/images/**/*.{gif,jpg,jpeg,JPG,JPEG,png,svg}",
    "dest": "public/assets/images/",
    "dist": "docs/assets/images/"
  },
  "data": {
    "src": "_src/assets/data/**/*.{json,JSON}",
    "dest": "public/assets/data/",
    "dist": "docs/assets/data/"
  },
  "watch": {
   "html": "_src/**/*.html",
   "data": "_src/assets/data/**/*.{json,JSON}"
  }
}
